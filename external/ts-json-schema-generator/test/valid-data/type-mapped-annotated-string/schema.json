    },
    "Size": {
      "description": "Size",
      "pattern": "^S|M|L$",
      "type": "string"
    },
    "SizeChart": {
      "additionalProperties": {
        "type": "number"
      },
      "description": "Size chart",
      "propertyNames": {
        "description": "Size",
        "pattern": "^S|M|L$"
      },
      "type": "object"
    }
  }
}
